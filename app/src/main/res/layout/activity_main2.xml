<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#8BC34A"
    tools:context="ramim.ramim.javaBook.Main2Activity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            app:lazyloader_animDur="800"
            app:lazyloader_dotsDist="10dp"
            android:id="@+id/lazyloderID"
            app:lazyloader_dotsRadius="16dp"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="#03A9F4"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="#FF5722"
            app:lazyloader_thirdDotColor="@color/yellow1" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:src="@drawable/bt"
            android:id="@+id/imageViewID"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome TO Java OOP Book"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:id="@+id/textViewID"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#00050C"/>

    </LinearLayout>

</RelativeLayout>
